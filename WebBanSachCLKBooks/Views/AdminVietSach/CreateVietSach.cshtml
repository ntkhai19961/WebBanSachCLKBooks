@model WebBanSachCLKBooks.ViewModels.VietSachViewModels

@{
    ViewBag.Title = "CreateVietSach";
    Layout = "~/Views/Shared/Admin.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (TempData["AlertMessage_AdminVietSach"] != null)
        {
            <div id="AlertBox" class="alert @TempData["AlertType_AdminVietSach"] hide" style="font-size:30px">
                @TempData["AlertMessage_AdminVietSach"]
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedTenTacGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(Model => Model.SelectedMaTacGia , new SelectList(Model.VietSach_TacGia , "MaTG" , "TenTG") , new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedTenTacGia, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.SelectedTenSach, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                @Html.DropDownListFor(Model => Model.SelectedMaSach, new SelectList(Model.VietSach_Sach, "Masach", "Tensach") , new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedTenSach, "", new { @class = "text-danger" })
            </div>
       </div>


            <div class="form-group">
                @Html.LabelFor(model => model.VaiTro, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.VaiTro, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.VaiTro, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.ViTri, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ViTri, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ViTri, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
